<body class="parallax_desktop">

    {# HEADER #}
    <header class="container-fluid">

        <div class="row">

            {# NAVBAR #}
            <nav class="navbar navbar-expand-lg">

                <div class="container-fluid">

                    <a class="navbar-brand" href="{{ path('app_accueil') }}">
                        <img src="/images/district/logo.webp" alt="Logo The District" width="200" height="auto" class="bordures_logo d-none d-lg-block">
                        <img src="/images/district/logo.webp" alt="Logo The District" width="100" height="auto" class="bordures_logo d-block d-sm-none">
                    </a>

                    <button class="navbar-toggler bordures border-4" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse bg-sm-white" id="navbarNavAltMarkup">

                        <div class="navbar-nav">

                            <div class="container ms-5">

                            <div class="row">

                                <div class="col d-flex gap-lg-5">

                                    <a class=" liens_header fs-1 fw-medium" aria-current="page" href="{{ path('app_accueil') }}">ACCUEIL</a>
                                    <a class=" liens_header fs-1 fw-medium" href="{{ path('app_categories') }}">CATÉGORIES</a>
                                    <a class=" liens_header fs-1 fw-medium" href="{{ path('app_plats') }}">PLATS</a>
                                    <a class=" liens_header fs-1 fw-medium" href="{{ path('app_contact') }}">CONTACT</a>

                                </div>

                            </div>

                            {# BARRE DE RECHERCHE #}
                            <div class="row mt-lg-5 d-flex justify-content-center">

                                <form action="#" method="get" class="z-3 d-flex champ_recherche" style="width: 44rem; height: 3rem;">

                                    <span class="input-group-text fs-4 sans_bordures bg-white ms-1">&#x1F50E;</span>

                                    <input type="search" name="query" value="{{ app.request.query.get('query') }}"
                                        placeholder="Tapez une recherche puis Entrée" class="fs-5 fw-medium sans_bordures" style="width: 28rem; height: 2.4rem;">

                                    {# Résultats de recherche #}
                                    <div class="me-2">

                                        {% if app.request.query.get('query') %}

                                        {% set searchQuery = app.request.query.get('query') %}
                                        {% set plats = search_service.searchPlatsByQuery(searchQuery) %}
    
                                        <ul style="width: 21rem; height: auto;">

                                            {% for plat in plats %}
                                            <li class="li_recherche bg-white border_suggestions">

                                                <a href="{{ path('app_page_plat', {'id': plat.id}) }}" class="d-flex liens_header_bonjour">

                                                    <img src="/images/plats/{{ plat.image }}" class="p-1 rounded-3" style="width: 3.5rem; height: 3.5rem;" alt="{{ plat.libelle }}" title="{{ plat.libelle }}">

                                                    <div class="fs-5 fw-medium align-content-center ms-1">{{ plat.libelle }}</div>

                                                </a>

                                            </li>
                                            {% endfor %}
                                            
                                        </ul>
        
                                        {% endif %}

                                    </div>

                                </form>

                            </div>

                            </div>

                            <div class="container ms-5 d-flex flex-column">

