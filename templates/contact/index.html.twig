{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

{# ICI METTRE LE FORMULAIRE CONTACT #}

{# MAIN #}
<main class="container-fluid pb-5">

    {# EN-TETE CONTACT #}
    <div class="row d-flex justify-content-center">

        <div class="col-12 col-lg-5 fs-1 fw-medium ms-lg-3 mt-3 mt-lg-3 text-center">

            <p class="lettres fond_intitule border-3">FORMULAIRE DE CONTACT</p>

        </div>

    </div>

    {{ form_start(form, {'attr': {'class': 'row m-sm-1 m-lg-5 d-flex justify-content-center'}}) }}
    
    {{ form_row(form._token) }}

    <div class="col-sm-10 col-lg-5 mt-3 mt-lg-0 mb-5 fs-4">
            {{ form_label(form.nom, '*Nom') }}
            {{ form_widget(form.nom, {
                'attr': {
                    'class': 'form-control fs-4 border-3 bordures fond_input',
                }
            }) }}
            {{ form_help(form.nom) }}
            <div class="message_erreur">
                {{ form_errors(form.nom) }}
            </div>
    </div>

    <div class="col-sm-10 col-lg-5 mt-3 mt-lg-0 mb-5 fs-4">
            {{ form_label(form.prenom, '*Prénom' ) }}
            {{ form_widget(form.prenom, {
                'attr': {
                    'class': 'form-control fs-4 border-3 bordures fond_input',
                }
            }) }}
            {{ form_help(form.prenom) }}
            <div class="message_erreur">
                {{ form_errors(form.prenom) }}
            </div>
    </div>

    <div class="col-sm-10 col-lg-5 mb-5 fs-4">
            {{ form_label(form.email, '*Email') }}
            {{ form_widget(form.email, {
                'attr': {
                    'class': 'form-control fs-4 border-3 bordures fond_input',
                }
            }) }}
            {{ form_help(form.email) }}
            <div class="message_erreur">
                {{ form_errors(form.email) }}
            </div>
    </div>

    <div class="col-sm-10 col-lg-5 mb-5 fs-4">
            {{ form_label(form.telephone, '*Téléphone' ) }}
            {{ form_widget(form.telephone, {
                'attr': {
                    'class': 'form-control fs-4 border-3 bordures fond_input',
                }
            }) }}
            {{ form_help(form.telephone) }}
            <div class="message_erreur">
                {{ form_errors(form.telephone) }}
            </div>
    </div>

    <div class="col-sm-10 col-lg-10 fs-4">
            {{ form_label(form.demande, '*Votre demande' ) }}
            {{ form_widget(form.demande, {
                'attr': {
                    'class': 'form-control fs-4 border-3 bordures fond_input',
                }
            }) }}
            {{ form_help(form.demande) }}
            <div class="message_erreur">
                {{ form_errors(form.demande) }}
            </div>
    </div>

    <div class="col-sm-10 col-lg-10 mb-5 fs-4">
            
        <p>* Ces champs sont obligatoires</p>

    </div>


    <div class="row">

        <button type="submit" class="d-flex justify-content-center align-items-center fw-medium mx-auto shadow-lg fs-5 rounded-4 bouton_categories"
                style="width: 10rem; height: 3rem;">

            Envoyer

        </button>

    </div>
    {{ form_end(form) }}

    {# RETOUR HAUT DE PAGE #}
    <div class="row">

        <div class="col d-flex justify-content-end me-5">

            <a href="#" class="fs-1 text-center lettres_blanches fleche_haut">↑</a>

        </div>

    </div>

</main>


{% endblock %}
