{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}


{# MAIN #}
<main class="container-fluid pb-5">

    {# EN-TETE CONTACT #}
    <div class="row d-flex justify-content-center">

        <div class="col-12 col-lg-5 fs-1 fw-medium ms-lg-3 mt-3 mt-lg-3 text-center">

            <p class="lettres fond_intitule border-3">FORMULAIRE DE CONTACT</p>

        </div>

    </div>

    
    {# FORMULAIRE DE CONTACT #}
    {{ form_start(contactForm) }}
    <div class="row m-sm-1 m-lg-5 d-flex justify-content-center ">

            <div class="col-sm-10 col-lg-5 mt-3 mt-lg-0 mb-lg-5 fs-4">

                {{ form_label(contactForm.nom) }}
                {{ form_widget(contactForm.nom) }}

                <div class="message_erreur">
                    {{ form_errors(contactForm.nom) }}
                </div>

            </div>

            <div class="col-sm-10 col-lg-5 mt-3 mt-lg-0 mb-lg-5 fs-4">

                {{ form_label(contactForm.prenom) }}
                {{ form_widget(contactForm.prenom) }}

                <div class="message_erreur">
                    {{ form_errors(contactForm.prenom) }}
                </div>

            </div>

            <div class="col-sm-10 col-lg-5 mt-3 mt-lg-0 mb-lg-5 fs-4">

                {{ form_label(contactForm.email) }}
                {{ form_widget(contactForm.email) }}

                <div class="message_erreur">
                    {{ form_errors(contactForm.email) }}
                </div>

            </div>

            <div class="col-sm-10 col-lg-5 mt-3 mt-lg-0 mb-lg-5 fs-4">

                {{ form_label(contactForm.telephone) }}
                {{ form_widget(contactForm.telephone) }}

                <div class="message_erreur">
                    {{ form_errors(contactForm.telephone) }}
                </div>

            </div>

            <div class="col-sm-10 col-lg-10 mt-3 mt-lg-0 fs-4">

                {{ form_label(contactForm.demande) }}
                {{ form_widget(contactForm.demande) }}

                <div class="message_erreur">
                    {{ form_errors(contactForm.demande) }}
                </div>

            </div>

            <div class="col-sm-10 col-lg-10 mt-3 mt-lg-0 mb-lg-5 fs-4">

                *Tous les champs sont obligatoires

            </div>

            <div class="col-sm-10 col-lg-10 mt-3 mt-lg-0 fs-4">
                {{ form_widget(contactForm.submit) }}
            </div>

            {{ form_end(contactForm) }}

    </div>


</main>


{% endblock %}
