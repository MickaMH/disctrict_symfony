{% extends 'base.html.twig' %}

{% block title %}Modifier informations personnelles{% endblock %}

{% block body %}


{# MAIN #}
<main class="container-fluid pb-5">

    {# EN-TETE CONTACT #}
    <div class="row d-flex justify-content-center">

        <div class="col-12 col-lg-5 fs-1 fw-medium ms-lg-3 mt-3 mt-lg-3 text-center">

            <p class="">MODIFIER VOS INFORMATIONS</p>

        </div>

    </div>

    {# FORMULAIRE MODIF INFOS PERSONNELLES #}
    {{ form_start(modifInfosForm) }}
    <div class="row m-sm-1 m-lg-5 d-flex justify-content-center ">

            <div class="col-sm-10 col-lg-5 mt-3 mt-lg-0 mb-lg-5 fs-4">

                {{ form_label(modifInfosForm.nom) }}
                {{ form_widget(modifInfosForm.nom) }}

                <div class="message_erreur">
                    {{ form_errors(modifInfosForm.nom) }}
                </div>

            </div>

            <div class="col-sm-10 col-lg-5 mt-3 mt-lg-0 mb-lg-5 fs-4">

                {{ form_label(modifInfosForm.prenom) }}
                {{ form_widget(modifInfosForm.prenom) }}

                <div class="message_erreur">
                    {{ form_errors(modifInfosForm.prenom) }}
                </div>

            </div>

            <div class="col-sm-10 col-lg-5 mt-3 mt-lg-0 mb-lg-5 fs-4">

                {{ form_label(modifInfosForm.telephone) }}
                {{ form_widget(modifInfosForm.telephone) }}

                <div class="message_erreur">
                    {{ form_errors(modifInfosForm.telephone) }}
                </div>

            </div>

            <div class="col-sm-10 col-lg-5 mt-3 mt-lg-0 mb-lg-5 fs-4">

                {{ form_label(modifInfosForm.adresse) }}
                {{ form_widget(modifInfosForm.adresse) }}

                <div class="message_erreur">
                    {{ form_errors(modifInfosForm.adresse) }}
                </div>

            </div>

            <div class="col-sm-10 col-lg-5 mt-3 mt-lg-0 mb-lg-0 fs-4">

                {{ form_label(modifInfosForm.cp) }}
                {{ form_widget(modifInfosForm.cp) }}

                <div class="message_erreur">
                    {{ form_errors(modifInfosForm.cp) }}
                </div>

            </div>

            <div class="col-sm-10 col-lg-5 mt-3 mt-lg-0 mb-lg-0 fs-4">

                {{ form_label(modifInfosForm.ville) }}
                {{ form_widget(modifInfosForm.ville) }}

                <div class="message_erreur">
                    {{ form_errors(modifInfosForm.ville) }}
                </div>

            </div>

            <div class="col-sm-10 col-lg-10 mb-lg-5 fs-4">

                *Tous les champs sont obligatoires

            </div>

            <div class="col-sm-10 col-lg-10 mt-3 mt-lg-0 fs-4">

                <button type="submit"
                    class="d-flex justify-content-center align-items-center fw-medium mx-auto shadow-lg fs-5 rounded-3 bouton_categories"
                    style="width: 15rem; height: 3rem;">
                    Modifier
                </button>

                <a href="#" onclick="history.back(); return false;"
                    class="d-flex justify-content-center align-items-center fw-medium mx-auto shadow-lg fs-5 rounded-3 bouton_fermer_panier mt-4"
                    style="width: 15rem; height: 3rem;">
                    Retour
                </a>

            </div>

    </div>
    {{ form_end(modifInfosForm) }}

</main>

{% endblock %}
