{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">

    {% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
    <div class="fs-3 m-3">
        Vous êtes déjà connecté avec <span class="fw-medium">{{ app.user.userIdentifier }}</span>, <a href="{{ path('app_logout') }}">Se déconnecter.</a>
    </div>
    {% endif %}

    <div class="row d-flex justify-content-center">

        <div class="col-11 col-lg-4 fs-1 fw-medium mb-3 mb-lg-3 mt-3 mt-lg-3 text-center">
            <p>CONNEXION AU COMPTE</p>
        </div>

    </div>

    <div class="row m-1 m-lg-5 d-flex justify-content-center">

        <div class="col-sm-10 col-lg-7 mb-3 mb-lg-5 fs-4">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control fs-4 border-3 bordures fond_input" autocomplete="email" required autofocus>
        </div>

        <div class="col-sm-10 col-lg-7 mb-3 mb-lg-5 fs-4">
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control fs-4 border-3 bordures fond_input" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}">

        <div class="checkbox mb-3 col-sm-10 col-lg-7 fs-4">
            <label>
                Se souvenir de moi<input type="checkbox" name="_remember_me" class="ms-2 case_coche">
            </label>
        </div>

        <div class="col-12 col-lg-12 d-flex justify-content-center mb-5">
            <button class="d-flex justify-content-center align-items-center fw-medium shadow-lg fs-5 rounded-3 bouton_envoyer" style="width: 15rem; height: 3rem;" type="submit">
                Se connecter
            </button>
        </div>

        <div class="col-12 col-lg-12 d-flex justify-content-center mb-3">
            <p class="fs-4 fw-medium">Vous n'avez pas de compte? Créez en un ci-dessous.</p>
        </div>

        <div class="col-12 col-lg-12 d-flex justify-content-center mb-5">
            <a class="d-flex justify-content-center align-items-center fw-medium shadow-lg fs-5 rounded-3 bouton_fermer_panier text-decoration-none"
                style="width: 15rem; height: 3rem;"
                href="{{ path('app_register') }}">
                Créer un compte
            </a>
        </div>

    </div>

</form>
{% endblock %}
