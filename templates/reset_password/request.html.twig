{% extends 'base.html.twig' %}

{% block title %}Réinitialisation{% endblock %}

{% block body %}
<main>

    <div class="container">

        <div class="row">
    
            <div class="col col-md-6 col-lg-5 mx-auto">

                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                <p class="fs-1 mb-5 text-center">Nouveau mot de passe</p>

                <div>

                    {{ form_start(requestForm) }}

                        {{ form_row(requestForm.email) }}

                        <div>
                            <p>
                                Entrez votre adresse email, un email contenant un lien de réinitialisation
                                vous sera envoyé.
                            </p>
                        </div>

                        <div class="d-flex justify-content-center mb-5">
                            <button class="d-flex justify-content-center align-items-center shadow-lg rounded-3 bouton_categories" style="width: 10rem; height: 2rem;">
                                Envoyer l'email
                            </button>
                        </div>

                        {# Bouton Retour #}
                        <div class="d-flex justify-content-center mb-5">
                            <a href="{{ path('app_login') }}" class="d-flex justify-content-center align-items-center shadow-lg rounded-3 bouton_fermer_panier" style="width: 6rem; height: 2rem;" type="submit">
                                Retour
                            </a>
                        </div>

                    {{ form_end(requestForm) }}

                </div>

            </div>
    
        </div>
    
    </div>

</main>

{% endblock %}
