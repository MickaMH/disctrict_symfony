{% extends 'base.html.twig' %}

{% block title %}Réinitialisation{% endblock %}

{% block body %}

<main class="min-vh-100">

    <div class="container">

        <div class="row">

            <div class="col col-md-6 col-lg-6 mx-auto">

                <p class="fs-1 mb-5 text-center">Nouveau mot de passe</p >

                {{ form_start(resetForm) }}

                    {{ form_row(resetForm.plainPassword) }}

                    <div class="text-center">
                        <button class="btn btn-dark border_white mt-4">Réinitialiser</button>
                    </div>

                {{ form_end(resetForm) }}

            </div>

        </div>

    </div>

</main>

{% endblock %}
