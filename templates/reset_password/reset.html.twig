{% extends 'base.html.twig' %}

{% block title %}Réinitialisation{% endblock %}

{% block body %}

<main class="min-vh-100">

    <div class="container">

        <div class="row">

            <div class="col col-md-6 col-lg-6 mx-auto">

                <p class="fs-1 mb-5 text-center">Nouveau mot de passe</p>

                <div>

                    {{ form_start(resetForm) }}

                        {{ form_row(resetForm.plainPassword) }}

                        <div class="d-flex justify-content-center mt-3">
                            <button class="d-flex justify-content-center align-items-center shadow-lg rounded-3 bouton_categories" style="width: 8rem; height: 2rem;">
                                Réinitialiser
                            </button>
                        </div>

                    {{ form_end(resetForm) }}

                </div>

            </div>

        </div>

    </div>

</main>

{% endblock %}
