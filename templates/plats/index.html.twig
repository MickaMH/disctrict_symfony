{% extends 'base.html.twig' %}

{% block title %}Plats{% endblock %}

{% block body %}


{# MAIN #}
<main class="container-fluid">

    {# EN-TETE PLATS #}
    <div class="row d-flex justify-content-center">

        <div class="col fs-1 fw-medium mb-3 mb-lg-3 mt-3 mt-lg-3 text-center">

            <p>TOUS LES PLATS</p>

        </div>

    </div>

    {# CARD PLAT #}
    <div class="row d-flex justify-content-around">

        {% for plat in plats %}
            <div class="col-12 col-md-7 col-lg-4 p-lg-5 mb-5 mb-lg-0 d-flex justify-content-around">

                <div class="card border-4 bordures rounded-5">

                    {# IMAGE DU PLAT #}
                    <img src="/images/plats/{{ plat.image }}" class="img-fluid m-3 rounded-4 border_image" alt="{{ plat.libelle }}" title="{{ plat.libelle }}">

                    {# BOUTON AJOUTER AU PANIER ABSOLUTE #}
                    <a href="{{ path('app_panier_add', {'id': plat.id}) }}" class="position-absolute end-0 rounded-circle fond_logo p-3 mt-1 me-1">

                        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 16 16">
                            <g fill="white" fill-rule="evenodd">
                            <path d="M9.927 12.918a.648.648 0 0 1-.067-.279V8.483c0-.338.286-.576.588-.576h.021c.301 0 .594.238.594.576v3.46h.902V9.982h1.293l.164-3.006h.766c.4 0 .725-1.22.725-1.22c0-.37-.324-.672-.725-.672H12.26l-1.035-3.637a.614.614 0 0 0-.838-.286l-.072.036a.658.658 0 0 0-.288.863l.741 3.023H4.114l.768-3.019a.658.658 0 0 0-.281-.865l-.07-.036a.616.616 0 0 0-.842.277L2.616 5.083H.726c-.4 0-.725.302-.725.672c0 0 .324 1.22.725 1.22h.636l.449 6.677s.052 1.309 2.113 1.309h6.004v-2.043h-.001zM11.969 6h1.062v1.062h-1.062V6zM3.094 7.031H1.912V5.906h1.182v1.125zm1.912 5.711c0 .35-.251.633-.559.633h-.023c-.311 0-.561-.283-.561-.633V8.413c0-.35.25-.632.561-.632h.023c.308 0 .559.282.559.632v4.329zm2.998-.195c0 .334-.23.605-.514.605h-.021c-.284 0-.514-.271-.514-.605V8.448c0-.334.229-.604.514-.604h.021c.283 0 .514.271.514.604v4.099z"/><path d="M16 13.012h-2.008v-1.906h-.937v1.906h-2.003v.894h2.003v2.032h.937v-2.032H16v-.894z"/></g>
                        </svg>

                    </a>

                    {# BOUTON LIBELLE PLAT #}
                    <a href="{{ path('app_page_plat', {'id': plat.id}) }}"
                        class="btn_card fs-5 fw-medium text-center shadow-lg p-2 m-3 mt-0 rounded-4 text-decoration-none fond_logo lettres_blanches">

                        {{ plat.libelle }}

                    </a>

                </div>

            </div>
        {% endfor %}

    </div>


</main>


{% endblock %}
