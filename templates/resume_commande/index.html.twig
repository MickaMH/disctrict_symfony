{% extends 'base.html.twig' %}

{% block title %}COMMANDE{% endblock %}

{% block body %}


{# MAIN #}
<main class="container-fluid pb-lg-5">

    {# EN-TETE RESUMÉ COMMANDE #}
    <div class="row d-flex justify-content-center">

        <div class="col-8 col-lg-2 fs-1 fw-medium mb-3 mb-lg-3 mt-3 mt-lg-3 text-center">

            <p class="lettres fond_intitule">COMMANDE</p>

        </div>

    </div>

    <div class="row m-lg-5">

        <table class="table">

                <thead class="fs-2 border_thead">
                    <tr>
                        <th>Plat</th>
                        <th class="text-center">Quantité</th>
                        <th class="text-center">Total</th>
                    </tr>
                </thead>

                <tbody class="fs-4">
                    {% set total = 0 %}
                    {% for item in panierWithData %}
                    <tr>
                        <td>
                            <img src="/images/plats/{{ item.plat.image }}" class="me-3 p-1 rounded-4" style="width: 7rem; height: 7rem;" alt="{{ item.plat.libelle }}" title="{{ item.plat.libelle }}">
                            {{ item.plat.libelle }}
                        </td>
                        <td class="text-center">{{ item.quantite }}</td>
                        <td class="text-center">{{ item.plat.prix * item.quantite }}.00 €</td>
                        {% set total = total + (item.plat.prix * item.quantite) %}
                    </tr>
                    {% endfor %}
                </tbody>

                <tfoot class="border_tfoot">
                    <tr>
                        <td colspan="2" class="fs-2 fw-bold">Total de la commande</td>
                        <td class="fs-4 fw-medium text-center">{{ total }}.00 €</td>
                    </tr>
                </tfoot>
        </table>

    </div>

    <div class="row m-5">

        <div class="col-sm-12 col-lg-12">

            <p class="fs-2 fw-bold">Adresses</p>

        </div>

        <div class="col-sm-12 col-lg-12 d-flex justify-content-around">

            {% if app.user %}
            {# ADRESSE DE FACTURATION #}
            <div class="col-sm-10 col-lg-5 border_adresse">
                
                <div class="col-12 fs-3 fw-bold border_thead">
                    <p class="my-auto ms-2 mt-2 mb-2">Adresse de facturation</p>
                </div>
                
                <table class="table col-12">

                    <tbody class="fs-4">
                        <tr>
                            <td class="col-4">Adresse :</td>
                            <td class="col-8">{{ app.user.adresse }}</td>
                        </tr>
                        <tr>
                            <td>Code postal :</td>
                            <td>{{ app.user.cp }}</td>
                        </tr>
                        <tr>
                            <td>Ville :</td>
                            <td>{{ app.user.ville }}</td>
                        </tr>
                    </tbody>

                </table>

                <div class="col-12 fs-4 fw-bold text-center">
                    <div class="accordion" id="accordionExample">
                        <div class="accordion-item">

                            <h2 class="accordion-header" id="headingOne">
                                <button class="accordion-button collapsed fs-3 fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    Modifier l'adresse de facturation
                                </button>
                            </h2>

                            <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">

                                <div class="accordion-body fw-normal fs-4 text-start">

                                    <table class="table col-12">

                                        <tbody class="col-12 fs-4">
                                            <tr>
                                                <td>Adresse :</td>
                                                <td>
                                                    <input type="text" id="adresse" name="adresse" class="bordures fond_input rounded-3 border-3" maxlength="50">
                                                    
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Code postal :</td>
                                                <td>
                                                    <input type="text" id="codepostal" name="codepostal" class="bordures fond_input rounded-3 border-3" maxlength="5" style="width: 5rem;">
                                                    
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Ville :</td>
                                                <td>
                                                    <input type="text" id="ville" name="ville" class="bordures fond_input rounded-3 border-3" maxlength="30">
                                                
                                                </td>
                                            </tr>
                                        </tbody>

                                    </table>

                                </div>

                            </div>

                        </div>
                    </div>
                </div>

            </div>

            {# ADRESSE DE LIVRAISON #}
            <div class="col-sm-10 col-lg-5 border_adresse">

                <div class="col-12 fs-3 fw-bold border_thead">
                    <p class="my-auto ms-2 mt-2 mb-2">Adresse de livraison</p>
                </div>

                <table class="table col-12">

                    <tbody class="fs-4">
                        <tr>
                            <td class="col-4">Adresse :</td>
                            <td class="col-8">{{ app.user.adresse }}</td>
                        </tr>
                        <tr>
                            <td>Code postal :</td>
                            <td>{{ app.user.cp }}</td>
                        </tr>
                        <tr>
                            <td>Ville :</td>
                            <td>{{ app.user.ville }}</td>
                        </tr>
                    </tbody>

                </table>

                <div class="col-12 fs-4 fw-bold text-center">
                    <div class="accordion" id="accordionExample">
                        <div class="accordion-item">

                            <h2 class="accordion-header" id="headingOne">
                                <button class="accordion-button collapsed fs-3 fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    Modifier l'adresse de livraison
                                </button>
                            </h2>

                            <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">

                                <div class="accordion-body fw-normal fs-4 text-start">

                                    <table class="table col-12">

                                        <tbody class="col-12 fs-4">
                                            <tr>
                                                <td>Adresse :</td>
                                                <td><input type="text" id="adresse" name="adresse" class="bordures fond_input rounded-3 border-3" maxlength="50"></td>
                                            </tr>
                                            <tr>
                                                <td>Code postal :</td>
                                                <td><input type="text" id="codepostal" name="codepostal" class="bordures fond_input rounded-3 border-3" maxlength="5" style="width: 5rem;"></td>
                                            </tr>
                                            <tr>
                                                <td>Ville :</td>
                                                <td><input type="text" id="ville" name="ville" class="bordures fond_input rounded-3 border-3" maxlength="30"></td>
                                            </tr>
                                        </tbody>

                                    </table>

                                    {# <label for="adresse" class="mb-2">Adresse :</label>
                                    <input type="text" id="adresse" name="adresse" class="bordures fond_input rounded-3 border-3">
                                    <br>

                                    <label for="codepostal" class="mb-2">Code postal :</label>
                                    <input type="text" id="codepostal" name="codepostal" class="bordures fond_input rounded-3 border-3">
                                    <br>

                                    <label for="ville" class="mb-2">Ville :</label>
                                    <input type="text" id="ville" name="ville" class="bordures fond_input rounded-3 border-3"> #}

                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>

    </div>

    <div class="row m-5">

        <div class="col-12">

            <p class="fs-2 fw-bold">Moyen de paiement (Non fonctionnel)</p>

        </div>

        <div class="col-12 fs-4">

            <form action="/traitement_paiement" method="post" class="ms-3">

                <label for="carte">Carte bancaire</label>
                <input type="radio" id="carte" name="moyen_paiement" value="carte">
                <br>

                <label for="paypal">PayPal</label>
                <input type="radio" id="paypal" name="moyen_paiement" value="paypal">
                <br>

                <label for="virement">Virement bancaire</label>
                <input type="radio" id="virement" name="moyen_paiement" value="virement">

                <table class="table col-12 mt-3">

                    <tbody class="fs-4 border border-white">
                        <tr>
                            <td class="col-2">Numéro de carte :</td>
                            <td><input type="text" id="numero_carte" name="numero_carte" class="bordures fond_input rounded-3 border-3 text-center"
                                        maxlength="19" style="width: 15rem;" placeholder="0000 0000 0000 0000"></td>
                        </tr>
                        <tr>
                            <td class="col-2">Nom du titulaire :</td>
                            <td><input type="text" id="nom_titulaire" name="nom_titulaire" class="bordures fond_input rounded-3 border-3"
                                        maxlength="50" style="width: 20rem;" placeholder="Dupont Pierre"></td>
                        </tr>
                        <tr>
                            <td class="col-2">Date d'expiration :</td>
                            <td><input type="text" id="date_expiration" name="date_expiration" class="bordures fond_input rounded-3 border-3 text-center"
                                        maxlength="5" style="width: 5rem;" placeholder="01/25"></td>
                        </tr>
                        <tr>
                            <td class="col-2">CVV :</td>
                            <td><input type="text" id="cvv" name="cvv" class="bordures fond_input rounded-3 border-3 text-center"
                                        maxlength="3" style="width: 4rem;"placeholder="000"></td>
                        </tr>
                    </tbody>

                </table>

                {# <label for="numero_carte" class="mb-2">Numéro de carte :</label>
                <input type="text" id="numero_carte" name="numero_carte" class="bordures fond_input rounded-3 border-3 text-center" maxlength="19" style="width: 15rem;" placeholder="0000 0000 0000 0000">
                <br>
                <label for="nom_titulaire" class="mb-2">Nom du titulaire :</label>
                <input type="text" id="nom_titulaire" name="nom_titulaire" class="bordures fond_input rounded-3 border-3" maxlength="50" style="width: 20rem;">
                <br>
                <label for="date_expiration" class="mb-2">Date d'expiration :</label>
                <input type="text" id="date_expiration" name="date_expiration" class="bordures fond_input rounded-3 border-3 text-center" maxlength="5" style="width: 5rem;" placeholder="01/24">
                <br>
                <label for="cvv">CVV :</label>
                <input type="text" id="cvv" name="cvv" class="bordures fond_input rounded-3 border-3 text-center" maxlength="3" style="width: 4rem;"placeholder="000"> #}
            </form>

        </div>

    </div>

    <div class="row m-5">

        <div class="col-12">

            <p class="fs-2 fw-bold">Conditions générales d'utilisation</p>

        </div>

        <div class="checkbox ms-3 mb-3 col-sm-10 col-lg-7 fs-4">

            <label for="accept_cgu">
                Accepter les <a href="{{ path('app_cgu') }}" class="lettres">CGU</a>
            </label>
            <input type="checkbox" id="accept_cgu" name="accept_cgu" class="ms-2 case_coche">

        </div>

    </div>

    <div class="row d-flex justify-content-center">

        <a class="d-flex justify-content-center align-items-center fw-medium  shadow-lg fs-5 bouton_categories me-5"
                id="precedent" style="width: 15rem; height: 3rem;"  href="{{ path('app_commande_add') }}" role="button">Finaliser la commande</a>

        <a href="#" onclick="history.back(); return false;"
                class="d-flex justify-content-center align-items-center fw-medium  shadow-lg fs-5 bouton_fermer_panier ms-5"
                style="width: 10rem; height: 3rem;">
                Retour
        </a>

    </div>

</main>
{% endblock %}
