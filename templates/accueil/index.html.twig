{# ICI METTRE BIENVENUE, CARDS NAVIGATION, TOP CATEGORIES, TOP PLATS, LABELS #}

{# MAIN #}
<main class="container-fluid pb-lg-5">

        {# CAROUSEL BIENVENUE DESKTOP #}
        <div class="container-fluid d-none d-lg-block d-flex align-self-center bordures_bienvenue" style="width: 45rem; height: auto;">

            <div class="row">

                <div class="col-lg-12 fw-medium text-center d-none d-lg-block">

                    <div id="carousel_desktop" class="carousel-fade" data-bs-ride="carousel">

                        <div class="carousel-inner">

                            <div class="carousel-item active d-flex align-items-center" data-bs-interval="4000">

                                <img src="/images/icones/france_flag.webp" style="width: 3rem;" class="mb-3">
                                <p class="d-block w-100 bienvenue_desktop">BIENVENUE</p>
                                <img src="/images/icones/france_flag.webp" style="width: 3rem;" class="mb-3">

                            </div>

                            <div class="carousel-item d-flex align-items-center" data-bs-interval="4000">

                                <img src="/images/icones/british_flag.webp" style="width: 3rem;" class="mb-3">
                                <p class="d-block w-100 bienvenue_desktop">WELCOME</p>
                                <img src="/images/icones/british_flag.webp" style="width: 3rem;" class="mb-3">

                            </div>

                            <div class="carousel-item d-flex align-items-center" data-bs-interval="4000">

                                <img src="/images/icones/spain_flag.webp" style="width: 3rem;" class="mb-3">
                                <p class="d-block w-100 bienvenue_desktop">BIENVENIDA</p>
                                <img src="/images/icones/spain_flag.webp" style="width: 3rem;" class="mb-3">

                            </div>

                            <div class="carousel-item d-flex align-items-center" data-bs-interval="4000">

                                <img src="/images/icones/nl_flag.webp" style="width: 3rem;" class="mb-3">
                                <p class="d-block w-100 bienvenue_desktop">WELKOM</p>
                                <img src="/images/icones/nl_flag.webp" style="width: 3rem;" class="mb-3">

                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>


        {# CARDS NAVIGATION DESKTOP #}
        <div class="row d-flex justify-content-center">

            <div class="col-lg-12 rond bordures mt-lg-3 d-none d-lg-block" style="width: 29rem; height: 28rem;">

                <div class="row mt-3">

                    <div class="col-lg-12 text-center d-flex justify-content-center">

                        <div class="card shadow-lg border-4 bordures rounded-5 zoom" style="width: 10rem; height: 10rem;">

                            <div>

                                <p class="card-text mb-1 fw-medium">Toutes les<br> catégories de plat</p>
                                <img src="/images/icones/icone_categories_transp_2.webp" class="card-img mt-1" style="width: 33%;" alt="" title="">

                            </div>

                            <div class="mt-3 ms-2 me-2 rounded-5 fond_logo text-center" style="height: 1.6rem;">

                                <a href="{{ path('app_categories') }}" class="text-decoration-none">
                                <p class="fw-medium lettres_blanches">CATÉGORIES</p>
                                </a>

                            </div>

                        </div>

                    </div>

                </div>

                {# BOUSSOLE #}
                <div class="row">

                    <div class="col-lg-12 mt-2 d-flex justify-content-center">

                        <img src="/images/icones/boussole_1.webp" class="" style="width: auto; height: 4rem;" alt="">

                    </div>

                </div>

                {# CARDS NAV PLATS/CONTACT #}
                <div class="row mt-2 d-flex justify-content-around">

                    <div class="col-lg-5 text-center">

                        <div class="card shadow-lg border-4 bordures rounded-5 zoom" style="width: 10rem; height: 10rem;">

                            <div>

                                <p class="card-text mb-1 fw-medium">Retrouvez tous<br> les plats</p>
                                <img src="/images/icones/icone_plats_transp_2.webp" class="card-img mt-1" style="width: 37%;" alt="" title="">

                            </div>

                            <div class="mt-3 ms-2 me-2 rounded-5 fond_logo text-center" style="height: 1.6rem;">

                                <a href="{{ path('app_plats') }}" class="text-decoration-none">
                                <p class="fw-medium lettres_blanches">PLATS</p>
                                </a>

                            </div>

                        </div>

                    </div>

                    <div class="col-lg-5 text-center">

                        <div class="card shadow-lg border-4 bordures rounded-5 zoom ms-2" style="width: 10rem; height: 10rem;">

                            <div>

                                <p class="card-text mb-1 fw-medium">Adressez nous<br> vos demandes</p>
                                <img src="/images/icones/icone_contact_transp_2.webp" class="card-img mt-1 ms-2" style="width: 30%;" alt="" title="">

                            </div>

                            <div class="mt-3 ms-2 me-2 rounded-5 fond_logo text-center" style="height: 1.6rem;">

                                <a href="{{ path('app_contact') }}" class="text-decoration-none">
                                <p class="fw-medium lettres_blanches">CONTACT</p>
                                </a>

                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>


        {# CARDS NAVIGATION MOBILE #}
        <div class="row mt-5 mb-2 d-block d-sm-none mx-auto">

            <div class="card-group text-center">

                <div class="d-flex">

                    <div class="card shadow-lg border-4 bordures rounded-5 zoom mx-auto mb-4 me-3" style="width: 10rem; height: 10rem;">

                        <div>

                            <p class="card-text mb-1 fw-medium">Toutes les<br> catégories de plat</p>
                            <img src="/images/icones/icone_categories_transp_2.webp" class="card-img mt-1" style="width: 33%;" alt="" title="">

                        </div>

                        <div class="mt-3 ms-2 me-2 rounded-5 fond_logo text-center" style="height: 1.6rem;">

                            <a href="{{ path('app_categories') }}" class="text-decoration-none">
                            <p class="fw-medium lettres_blanches">CATÉGORIES</p>
                            </a>

                        </div>

                    </div>

                    <div class="card shadow-lg border-4 bordures rounded-5 zoom mx-auto mb-4 ms-3" style="width: 10rem; height: 10rem;">

                        <div>

                        <p class="card-text mb-1 fw-medium">Retrouvez tous<br> les plats</p>
                        <img src="/images/icones/icone_plats_transp_2.webp" class="card-img mt-1" style="width: 37%;" alt="" title="">

                        </div>

                        <div class="mt-3 ms-2 me-2 rounded-5 fond_logo text-center" style="height: 1.6rem;">

                        <a href="{{ path('app_plats') }}" class="text-decoration-none">
                        <p class="fw-medium lettres_blanches">PLATS</p>
                        </a>

                        </div>

                    </div>

                </div>

                <div class="card shadow-lg border-4 bordures rounded-5 zoom mx-auto" style="width: 10rem; height: 10rem;">

                    <div>

                        <p class="card-text mb-1 fw-medium">Adressez nous<br> vos demandes</p>
                        <img src="/images/icones/icone_contact_transp_2.webp" class="card-img mt-1 ms-2" style="width: 30%;" alt="" title="">

                    </div>

                    <div class="mt-3 ms-2 me-2 rounded-5 fond_logo text-center" style="height: 1.6rem;">

                        <a href="{{ path('app_contact') }}" class="text-decoration-none">
                        <p class="fw-medium lettres_blanches">CONTACT</p>
                        </a>

                    </div>

                </div>

            </div>

        </div>


        {# TOP 3 CATEGORIES #}
        <div class="row mb-3 mb-lg-5 mt-5 mt-lg-5 d-flex justify-content-center">

            <div class="col-lg-10 d-flex justify-content-center">

                <p class="fs-3 d-flex justify-content-center align-items-center fw-medium panneaux">Top 3 des Catégories</p>

            </div>

        </div>

        <div class="row mb-lg-5 mt-3 mt-lg-5 d-flex justify-content-center">

            {% for categorie in categories %}

                    {# {{ categorie.image }}        {{ categorie.libelle |upper }}      {{ categorie.plats | length }} #}

                    <div class="col-lg-3 mb-5 mb-lg-5 d-flex justify-content-center">

                        <div class="card w-100 border-4 bordures rounded-5">

                            <h5 class="card-text fs-3 mt-3 mb-0 fw-medium text-center">{{ categorie.libelle |upper }}</h5>

                            <img src="/images/categories/{{ categorie.image }}" class="card-img-top p-3 rounded-5" alt="" title="">

                            <a href="{{ path('app_plats_par_cat', {'id': categorie.id}) }}" class="fs-5 fw-medium d-flex justify-content-center align-items-center shadow-lg p-2 m-3 mt-0 rounded-4 text-decoration-none fond_logo lettres_blanches bouton_mini">Voir</a>

                        </div>

                    </div>

                {% endfor %}

        </div>


        {# TOP 3 PLATS #}
        <div class="row mt-lg-5 mb-lg-5 d-flex justify-content-center">

            <div class="col-lg-10 d-flex justify-content-center">

                <p class="fs-3 d-flex justify-content-center align-items-center fw-medium panneaux">Top 3 des Plats</p>

            </div>

        </div>

        <div class="row mt-3 mt-lg-5 mb-3 mb-lg-3 d-flex justify-content-center">

            {% for plat in plats %}

            <div class="col-lg-3 mb-5 mb-lg-5 d-flex justify-content-center">

                <div class="card w-100 border-4 bordures rounded-5">

                    <h5 class="card-text fs-3 mt-3 mb-0 fw-medium text-center">{{ plat.libelle }}</h5>

                    <img src="/images/plats/{{ plat.image }}" class="card-img-top p-3 rounded-5" alt="">

                    <a href="{{ path('app_plats_par_cat', {'id': plat.categorie.id}) }}" class="fs-5 fw-medium d-flex justify-content-center align-items-center shadow-lg p-2 m-3 mt-0 rounded-4 text-decoration-none fond_logo lettres_blanches bouton_mini">Voir le plat</a>

                </div>

            </div>

            {% endfor %}

        </div>


        {# LABELS RESTOS #}
        <div class="row d-none d-lg-block mt-lg-5">

            <div class="col-lg-12 mt-2 mb-5 d-flex justify-content-around">

                <a href="https://www.artisanat.fr/metiers/labels-qualifications/titre-maitre-artisan" class="text-decoration-none">
                    <img src="/images/labels/artisanat_certifie.webp" class="border border-dark rounded-2" alt="" style="width: 10rem; height: auto;">
                </a>

                <a href="https://www.maitresrestaurateurs.fr/" class="text-decoration-none">
                    <img src="/images/labels/label_resto.webp" class="border border-dark rounded-2" alt="" style="width: 10rem; height: auto;">
                </a>

                <a href="https://www.bienvenue-a-la-ferme.com/" class="text-decoration-none">
                    <img src="/images/labels/producteurs_locaux.webp" class="border border-dark rounded-2" alt="" style="width: 10rem; height: auto;">
                </a>

            </div>

        </div>

        {# RETOUR HAUT DE PAGE #}
        <div class="row">

            <div class="col d-flex justify-content-end me-5">

                <a href="#" class="fs-1 text-center lettres_blanches fleche_haut">↑</a>

            </div>

        </div>

</main>


{% endblock %}
