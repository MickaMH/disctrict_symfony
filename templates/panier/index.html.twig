    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style> #}


{# MAIN #}
<main class="container-fluid pb-lg-5">

    {# EN-TETE PLATS #}
    <div class="row d-flex justify-content-center">

        <div class="col-8 col-lg-2 fs-1 fw-medium mb-3 mb-lg-3 mt-3 mt-lg-3 text-center">

            <p class="lettres fond_intitule">PANIER</p>

        </div>

    </div>

    <div class="row m-5">

        {% if items | length > 0 %}
            <table class="table">

                <thead class="fs-2 border_thead">
                    <tr>
                        <th>Plat</th>
                        <th>Prix</th>
                        <th>Quantit√©</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody class="fs-4">
                    {% for item in items %}
                        <tr>
                            <td>
                                <img src="/images/plats/{{ item.plat.image }}" class="me-3 p-1 rounded-4" style="width: 7rem; height: 7rem;" alt="Image du plat">
                                {{ item.plat.libelle }}
                            </td>

                            <td>
                                <div class="mt-4">
                                    {{ item.plat.prix }} &#8364;
                                </div>
                            </td>

                            <td>
                                <div class="d-flex mt-4">
                                    <a href="{{ path('app_panier_add', {'id': item.plat.id}) }}" class="d-flex align-items-center justify-content-center btn_plus text-decoration-none shadow-lg fw-medium lettres_blanches fs-5 rounded-3 me-4" style="width: 2rem; height: 2rem;">
                                        +
                                    </a>
                                    {{ item.quantite }}
                                    <a href="{{ path('app_panier_removeOne', {'id': item.plat.id}) }}" class="d-flex align-items-center justify-content-center btn_moins text-decoration-none shadow-lg fw-medium lettres_blanches fs-5 rounded-3 ms-4" style="width: 2rem; height: 2rem;">
                                        -
                                    </a>
                                </div>
                            </td>

                            <td>
                                <div class="mt-4">
                                    {{ item.plat.prix * item.quantite }}.00 &#8364;
                                </div>
                            </td>

                            <td>
                                <div class="mt-4">
                                    <a href="{{ path('app_panier_remove', {'id': item.plat.id}) }}" class="d-flex align-items-center justify-content-center btn_suppr text-decoration-none shadow-lg fw-medium lettres_blanches fs-5 rounded-3" style="width: 2rem; height: 2rem;">
                                        x
                                    </a>
                                </div>
                            </td>

                        </tr>
                    {% endfor %}
                </tbody>

                <tfoot class="border_tfoot">
                    <tr>
                        <td colspan="3" class="fs-2 fw-medium">Total de la commande</td>
                        <td class="fs-4 fw-medium">{{ total }}.00 &#8364;</td>
                    </tr>
                </tfoot>

            </table>

        {% else %}
            <p class="fs-2 text-center">Votre panier est vide !</p>
        {% endif %}

    </div>

    <div class="row mb-5 d-flex justify-content-center">

        <div class="col-6 col-lg-6 d-flex">

            <a class="d-flex justify-content-center align-items-center fw-medium mx-auto shadow-lg fs-5 bouton_categories"
                id="precedent" style="width: 15rem; height: 3rem;"  href="{{ path('app_resume_commande') }}" role="button">Valider le panier</a>

            <a class="d-flex justify-content-center align-items-center fw-medium mx-auto shadow-lg fs-5 bouton_fermer_panier"
                id="precedent" style="width: 15rem; height: 3rem;"  href="{{ path('app_accueil') }}" role="button">Continuer vos achats</a>

        </div>

    </div>

</main>
{% endblock %}
