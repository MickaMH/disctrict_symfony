{# MAIN #}
<main class="container-fluid pb-lg-5">

    {# EN-TETE PLATS #}
    <div class="row d-flex justify-content-center">

        <div class="col-8 col-lg-2 fs-1 fw-medium mb-3 mb-lg-3 mt-3 mt-lg-3 text-center">

            <p class="lettres fond_intitule">PANIER</p>

        </div>

    </div>

    <div class="row d-flex justify-content-around">

        {% if items | length > 0 %}
            <table class="table">
                <thead>
                    <tr>
                        <th>Plat</th>
                        <th>Prix</th>
                        <th>Quantit√©</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in items %}
                        <tr>
                            <td>{{ item.plat.libelle }}</td>
                            <td>{{ item.plat.prix }}</td>
                            <td>{{ item.quantite }}</td>
                            <td>{{ item.plat.prix * item.quantite }}</td>
                            <td>
                                <a href="{{ path('app_panier_remove', {'id': item.plat.id}) }}" class="btn btn-warning btn-sm">
                                    <span>&#128465;</span>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3">Total commande</td>
                        <td>{{ total }}</td>
                        <td></td>
                </tfoot>
            </table>
        {% else %}
            <p>Surprise, c'est vide !</p>
        {% endif %}

    </div>

</main>
{% endblock %}
